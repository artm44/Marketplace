@model Marketplace.Domain.ViewModels.Product.ProductViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@{
    var textTitle = "Добавление данных";
}
@if (ViewBag.Result != null)
{  
    @if (ViewBag.Result == true){
        <div class="result display-4" style="margin:auto; margin-bottom:20px; text-align:center;">Товар успешно создан </div>
    } else
    {
       
        <div class="result display-4" style="margin:auto; margin-bottom:20px; text-align:center;">Товар не создан :c </div>
        
    }
}
else{
    <div style="padding: 10px;"></div>
    <div class="col-md-12">
        <div class="card-body">
            <div class="card card-outline-secondary" style="background-color: white">
                <div class="card-header">
                    <h3 class="mb-0 text-center ParagraphHome">@textTitle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateProduct" enctype="multipart/form-data">
                        <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" type="text">
                        </div>
                        <button class="btn btn-primary btn-lg float-right" type="submit" style="margin-top:20px">Отправить</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>